@page
@model fantazijos_lyga.Pages.AddTeamModel
@{
}

@section Styles{
    <link rel="stylesheet" href="/css/adminPanel.css" />
}

<div id="main">
    <div class="container">
        <div class="row">
            <div class="col-lg">
                <h4 style="margin-top:20px;" class="sukurimoText">Administratoriaus panelė</h4>
                <hr class="adminHr" /><br />
                <h5 style="margin-top:-20px; margin-bottom:40px;"class="sukurimoText">Rungtynių sukūrimas</h5>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="labelText" for="exampleFormControlSelect1">Namų komanda</label>
                        <select class="form-control" asp-for="@Model.HomeTeam">
                            <option selected disabled>-- Pasirinkite Komanda --</option>
                            @foreach (var item in Model.displayData)
                            {
                                <option value="@item.ID">@item.Pavadinimas</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="labelText" for="exampleFormControlSelect1">Išvykos komanda</label>
                        <select class="form-control" asp-for="@Model.AwayTeam">
                            <option selected disabled>-- Pasirinkite Komanda --</option>
                            @foreach (var item in Model.displayData)
                            {
                                <option value="@item.ID">@item.Pavadinimas</option>
                            }
                        </select>
                    </div>
                    <label class="labelText" for="dateInput">Rungtynių data</label>
                    <input asp-for="date" class="form-control" asp-format="{0:yyyy-MM-dd HH:mm}" />
                    <input id="sukurimoButton" type="submit" value="Sukurti" class="btn float-right login_btn">
                </form>
            </div>
            <div class="col-lg">
                <img src="/img/basketball-court.png" class="img-fluid adminPanelImg" alt="Responsive image">
            </div>
        </div>
    </div>
</div>

<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "300px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>