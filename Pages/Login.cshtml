@page
@model fantazijos_lyga.Pages.LoginModel
@{
    ViewData["Title"] = "Prisijungti";
}
@section Styles{
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
}
<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card" style="margin-top:150px;">
            <div class="card-header">
                <h3>Prisijungti</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input asp-for="@Model.Username" type="text" class="form-control input_user" value="@Model.Username" placeholder="Slapyvardis">
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="@Model.Password" type="password" class="form-control input_pass" placeholder="Slaptažodis">
                    </div>
                    <div class="form-group">
                        <input id="login-btn" type="submit" value="Prisijungti" class="btn float-right login_btn">
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Neturite paskyros ?<a href="/register">Registruokitės</a>
                </div>
            </div>
        </div>
    </div>
    </div>
